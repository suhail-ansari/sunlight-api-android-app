<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_committee_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csci571.csci571hw9.CommitteeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_button_container_parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <!-- Left side spacer -->
                <LinearLayout
                    android:id="@+id/bill_top_button_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="120dp"
                    android:layout_gravity="right"
                    android:weightSum="1"
                    android:gravity="right">

                    <ImageButton
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/ic_star"
                        android:id="@+id/committee_favorite_button"
                        android:scaleType="centerInside"
                        android:background="@android:drawable/screen_background_light_transparent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/committee_info_container">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_id_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Committee ID:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bill_id_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_id_text"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_name_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Name:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_name_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_name_text"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:breakStrategy="simple" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_chamber_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Chamber:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_chamber_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        
                        <ImageView
                            android:layout_height="40dp"
                            android:layout_width="40dp"
                            android:layout_weight="1"
                            android:id="@+id/committee_chamber_image"
                            app:srcCompat="@drawable/ic_blank"
                            android:layout_marginLeft="20dp" />
                        
                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/committee_chamber_text"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_parent_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Parent Committee:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_parent_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_parent_text"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_contact_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Contact:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_contact_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_contact_text"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/committee_office_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Office:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_office_label"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/committee_office_text"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
